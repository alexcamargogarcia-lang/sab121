    end)
end
  -- TEXTO CONFIGURADO: M√ÅS GRANDE Y LLAMATIVO
    local Status = Instance.new("TextLabel", BG)
    Status.Text = "Joining Server..."
    Status.Font = Enum.Font.GothamBold -- Fuente m√°s gruesa
